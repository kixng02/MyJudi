<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/allbb2"
    tools:context=".ccleCases" >

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="390dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Search your case here" />

    <TextView
        android:id="@+id/cases2"
        android:layout_width="387dp"
        android:layout_height="141dp"
        android:text="Democratic Alliance and Others v Mkhwebane and Another (1370/2019) [2021] ZASCA 18; [2021] 2 All SA 337 (SCA); 2021 (3) SA 403 (SCA) (11 March 2021)"
        android:textColor="#D67104"
        android:textSize="20sp"
        android:textStyle="bold" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="More cases to be added soon!"
        android:textColor="#FA0505"
        android:textSize="24sp"
        android:textStyle="bold" />


</LinearLayout>