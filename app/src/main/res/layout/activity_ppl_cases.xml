<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/allbb2"
    tools:context=".MainActivity" >

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="390dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Search your case here" />

    <TextView
        android:id="@+id/TVCase1"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:text="243 P. 1073 (Mont. 1926), 5789, State v. Johnson (Click here)"
        android:textColor="#F2A71B"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="More cases to be added soon!"
        android:textColor="#FA0505"
        android:textSize="24sp"
        android:textStyle="bold" />


</LinearLayout>